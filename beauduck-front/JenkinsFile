pipeline {
    agent any
    environment {
        DOCKER = 'sudo docker'
    }
   
    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
                echo 'Checkout Scm'
            }
        }
        
        stage('Build image') {
            steps {         
                sh 'ls -al'       
                sh ' npm -v'
                sh 'node -v'
                dir('beauduck-front'){
                    sh 'ls -al'
                    sh 'docker build -t beauduck-dev-front .'    
                }                                                
                echo 'Build image...'
            }
        }

        stage('Remove Previous image') {        
            steps {
                script {
                    try {
                            sh 'docker stop beauduck-dev-front'
                            sh 'docker rm beauduck-dev-front'                        
                    } catch (e) {
                        echo 'fail to stop and remove container'
                    }    
                }                
            }
            
        }
        stage('Run New image') {
            steps {
                sh 'ls -al'
                sh 'docker run --name beauduck-dev-front -d -p 3000:3000 beauduck-dev-front'
                echo 'Run New image'
            }
        }

    }
}
