pipeline {
    agent any
    environment {
        DOCKER = 'sudo docker'
    }
    tools {
        DOCKER = 'sudo docker'
    } 
    stages {
        stage('Clone Repository') {
            steps {
                checkout scm
                echo 'Checkout Scm'
            }
        }
        
        stage('Build image') {
            steps {
                sh ' npm -v'
                sh 'node -v'
                sh' cd beauduck-front'
                sh 'docker build -t beauduck-dev-front .'
                sh 'docker images'
                echo 'Build image...'
            }
        }

        stage('Remove Previous image') {
            steps {
                try {
                        sh 'docker stop beauduck-dev-front'
                        sh 'docker rm beauduck-dev-front'
                    } catch (e) {
                        echo 'fail to stop and remove container'
                    }
            }
        }
        stage('Run New image') {
            steps {
                sh 'docker run --name beauduck-dev-front -d -p 3000:3000 beauduck-dev-front'
                echo 'Run New image'
            }
        }

    }
}
